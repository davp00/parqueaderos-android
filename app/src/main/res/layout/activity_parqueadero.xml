<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParqueaderoActivity"
    android:background="@color/clouds">

    <ImageView
        android:id="@+id/parker_imagen"
        android:layout_width="396dp"
        android:layout_height="209dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/parker" />

    <TextView
        android:id="@+id/parker_nombre"
        android:layout_width="300dp"
        android:layout_height="84dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="NOMBRE DEL PARQUEADERO ASDASDASDASDSADASDASDASDASD"
        android:textAlignment="center"
        android:textColor="@color/midnight_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parker_imagen"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/parker_direccion"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:text="DIRECCION: "
        android:textColor="@color/midnight_blue"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parker_nombre"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/parker_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/midnight_blue"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:text="HORARIOS: "
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parker_direccion"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>